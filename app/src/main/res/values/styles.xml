<resources>

    <!-- Application theme. -->
    <style name="FomesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->
        <!--<item name="actionBarStyle">@style/FomesTheme.ActionBarStyle</item>-->
    </style>

    <!--<style name="FomesTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">-->
        <!--<item name="displayOptions">showHome|homeAsUp|showTitle</item>-->
    <!--</style>-->

    <style name="FomesTheme.NoActionBar" parent="FomesTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- End of Application theme. -->

    <!-- Android View Widget theme -->
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBeeMainTabTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/appbee_yellow</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/AppBeeMainTabTheme.TextAppearance</item>
    </style>

    <style name="AppBeeMainTabTheme.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/appbee_gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="NavigationViewTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/appbee_gray</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="EmptyContentView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:background">@drawable/empty_contents_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/appbee_warm_gray</item>
        <item name="android:textSize">13dp</item>
    </style>

    <!-- Fomes -->
    <style name="ProvisioningTheme" parent="FomesTheme.NoActionBar">
    </style>

    <style name="ProvisioningTheme.RadioGroup">
        <item name="divider_width">52dp</item>
        <item name="divider_height">0dp</item>
        <item name="divider_color">@android:color/transparent</item>
    </style>

    <style name="FomesMainTabTheme" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/AppBeeMainTabTheme.TextAppearance</item>
    </style>

    <style name="FomesMainTabTheme.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="FomesMainTabTheme.NavigationViewTextAppearance" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/nav_text_enable_selector</item>
        <item name="android:textSize">16dp</item>
        <!--<item name="android:icon">?attr/iconDrawable</item>-->
    </style>

    <style name="FomesMainTabTheme.RecommendDivider">
        <item name="divider_width">@dimen/match_constraint</item>
        <item name="divider_height">1dp</item>
        <item name="divider_color">@color/fomes_pale_gray</item>
    </style>

    <style name="FomesTheme.TurquoiseItem">
        <item name="item_color">@color/colorPrimary</item>
        <item name="item_number">@string/common_number_one</item>
    </style>

    <style name="FomesTheme.SquashItem">
        <item name="item_color">@color/fomes_squash</item>
        <item name="item_number">@string/common_number_two</item>
    </style>

    <style name="FomesTheme.BlushPinkItem">
        <item name="item_color">@color/fomes_blush_pink</item>
        <item name="item_number">@string/common_number_three</item>
    </style>

    <style name="AnaylsisTheme" parent="FomesTheme.NoActionBar">
    </style>

    <style name="AnaylsisTheme.Divider">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">@dimen/provision_padding_start_end</item>
        <item name="android:layout_marginStart">@dimen/provision_padding_start_end</item>
        <item name="android:background">@color/fomes_pale_gray</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="AnaylsisTheme.Table">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/analysis_content_table_margin_start_end</item>
        <item name="android:layout_marginStart">@dimen/analysis_content_table_margin_start_end</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="AnaylsisTheme.Table.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/fomes_light_warm_gray</item>
    </style>
</resources>
