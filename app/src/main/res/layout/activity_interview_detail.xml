<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <Button
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="32dp"
                android:text="⟵"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/representation_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/badge"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="내가 신청한 유저 인터뷰 입니다."/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/apps_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="네이버 웹툰 앱을 사용하는 당신을 위한"/>
        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Toonstory 유저인터뷰"/>
        <TextView
            android:id="@+id/project_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="앱으로 바로 만드는 내 얼굴 이모티콘"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appbee_yellow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인터뷰 종류"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1명씩 대면"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/appbee_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인터뷰 장소"/>
                <TextView
                    android:id="@+id/interview_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="우면사업장"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/appbee_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="감사 선물"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="스벅 쿠폰 3만원"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appbee_gray"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인터뷰 날짜"/>
                <TextView
                    android:id="@+id/interview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12/11 (월)"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/appbee_gray"/>
            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/appbee_gray"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신청 마감 날짜"/>
                <TextView
                    android:id="@+id/interview_d_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="D-12"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="@color/appbee_yellow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저희 프로젝트를 소개합니다." />
            <android.support.v4.view.ViewPager
                android:id="@+id/description_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"></android.support.v4.view.ViewPager>
            <TextView
                android:id="@+id/project_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="프로젝트 상세 설명"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/appbee_yellow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/interview_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="유저인터뷰 신청 전 읽어주세요"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인터뷰 신청 후...."/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/appbee_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appbee_yellow"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/detail_plans_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="세부일정 선택"/>
                <TextView
                    android:id="@+id/detail_plans_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="[앱] 툰스토리 유저 인터뷰 - 40분"/>
                <TextView
                    android:id="@+id/detail_plans_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12월 11일 (월) 우면사업장"/>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#ffffff">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/detail_plans_recycler_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isScrollContainer="false"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp">
                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 유저인터뷰 신청 후 확정이 되면 안내해드립니다(일주일 내)\n* 확정 후 취소 / 당일 노쇼 / 지각은 패널티가 부과됩니다.\n* 정확한 인터뷰 회의실과 담당자 번호는 확정 후 알려드립니다."/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interview_submit_button"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
