            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin">

                <ImageView android:id="@+id/betatest_detail_app_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginBottom="16dp"
                    android:foreground="@drawable/item_rect_rounded_corner_background"
                    android:theme="@style/BetaTestTheme.FinishedIconForeground"
                    android:src="@drawable/not_found_app_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView android:id="@+id/betatest_detail_title"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/fomes_white"
                    android:text="고양이 숲 - 캠핌장 이야기"
                    app:layout_constraintStart_toEndOf="@+id/betatest_detail_app_icon"
                    app:layout_constraintTop_toTopOf="@+id/betatest_detail_app_icon"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/betatest_detail_subtitle"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/fomes_white"
                    android:text="#시뮬레이션#보상없음#고양이#캠핑장"
                    app:layout_constraintStart_toStartOf="@+id/betatest_detail_title"
                    app:layout_constraintEnd_toEndOf="@+id/betatest_detail_title"
                    app:layout_constraintTop_toBottomOf="@+id/betatest_detail_title"/>

                <TextView android:id="@+id/betatest_detail_period"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"
                    android:textColor="#e9e9e9"
                    android:text="2019.06.01 ~ 06.08"
                    app:layout_constraintStart_toStartOf="@+id/betatest_detail_title"
                    app:layout_constraintTop_toBottomOf="@+id/betatest_detail_subtitle"/>

                <TextView android:id="@+id/betatest_detail_d_day"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/item_rect_rounded_corner_stroke_background"
                    android:textSize="8dp"
                    android:textColor="@color/colorPrimary"
                    android:theme="@style/BetaTestTheme.TagBackground"
                    android:text="D - 7"
                    app:layout_constraintTop_toTopOf="@+id/betatest_detail_period"
                    app:layout_constraintBottom_toBottomOf="@+id/betatest_detail_period"
                    app:layout_constraintStart_toEndOf="@+id/betatest_detail_period" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fomes_greyish_brown"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/betatest_detail_title_textview"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:gravity="center"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:text="테스트" />
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>