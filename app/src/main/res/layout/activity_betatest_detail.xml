<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/betatest_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fomes_deep_gray"
    android:fitsSystemWindows="true"
    tools:context="com.formakers.fomes.main.view.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/fomes_greyish_brown"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/betatest_detail_overview_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@color/fomes_greyish_brown"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/betatest_detail_gradient"
                app:layout_collapseMode="pin"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:layout_collapseMode="pin">

                <ImageView android:id="@+id/betatest_detail_app_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginBottom="16dp"
                    android:foreground="@drawable/item_rect_rounded_corner_background"
                    android:theme="@style/BetaTestTheme.FinishedIconForeground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView android:id="@+id/betatest_detail_title"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/fomes_white"
                    android:singleLine="true"
                    android:ellipsize="end"
                    tools:text="고양이 숲 - 캠핌장 이야기"
                    app:layout_constraintStart_toEndOf="@+id/betatest_detail_app_icon"
                    app:layout_constraintTop_toTopOf="@+id/betatest_detail_app_icon"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView android:id="@+id/betatest_detail_subtitle"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/fomes_white"
                    tools:text="#시뮬레이션#보상없음#고양이#캠핑장"
                    app:layout_constraintStart_toStartOf="@+id/betatest_detail_title"
                    app:layout_constraintEnd_toEndOf="@+id/betatest_detail_title"
                    app:layout_constraintTop_toBottomOf="@+id/betatest_detail_title"/>

                <TextView android:id="@+id/betatest_detail_period"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"
                    android:textColor="@color/fomes_light_pale_gray"
                    tools:text="2019.06.01 ~ 06.08"
                    app:layout_constraintStart_toStartOf="@+id/betatest_detail_title"
                    app:layout_constraintTop_toBottomOf="@+id/betatest_detail_subtitle"/>

                <TextView android:id="@+id/betatest_detail_d_day"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/item_rect_rounded_corner_stroke_background"
                    android:textSize="8dp"
                    android:textColor="@color/colorPrimary"
                    android:theme="@style/BetaTestTheme.TagBackground"
                    android:visibility="gone"
                    tools:text="D - 7"
                    app:layout_constraintTop_toTopOf="@+id/betatest_detail_period"
                    app:layout_constraintBottom_toBottomOf="@+id/betatest_detail_period"
                    app:layout_constraintStart_toEndOf="@+id/betatest_detail_period" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fomes_deep_gray"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/betatest_reward_title_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/betatest_detail_rewards_title"
                android:layout_marginTop="@dimen/betatest_detail_items_margin_top"
                android:layout_marginStart="31dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/betatest_reward_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/fomes_warm_gray_2"
                android:layout_marginTop="@dimen/betatest_detail_items_description_margin_top"
                app:layout_constraintTop_toBottomOf="@id/betatest_reward_title_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_reward_title_textview"
                tools:ignore="MissingConstraints"
                tools:text="테스트 마감후 7일 이내에 보상이 지급됩니다." />

            <LinearLayout
                android:id="@+id/betatest_reward_items_layout"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="31dp"
                android:layout_marginEnd="31dp"
                android:showDividers="middle"
                android:divider="@drawable/divider"
                android:theme="@style/BetaTestDetailTheme.RewardDivider"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/betatest_reward_description_textview"/>

            <TextView
                android:id="@+id/betatest_mission_list_title_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/betatest_detail_mission_list_title"
                android:layout_marginTop="@dimen/betatest_detail_items_margin_top"
                app:layout_constraintTop_toBottomOf="@+id/betatest_reward_items_layout"
                app:layout_constraintStart_toStartOf="@+id/betatest_reward_title_textview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_reward_title_textview"/>

            <TextView
                android:id="@+id/betatest_mission_list_description_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="@color/fomes_warm_gray_2"
                android:layout_marginTop="@dimen/betatest_detail_items_description_margin_top"
                android:text="@string/betatest_detail_mission_list_description"
                app:layout_constraintTop_toBottomOf="@id/betatest_mission_list_title_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_mission_list_title_textview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_mission_list_title_textview"
                tools:ignore="MissingConstraints"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/betatest_mission_list"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/betatest_detail_items_list_margin_top"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:overScrollMode="never"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/betatest_mission_list_description_textview"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>