<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/match_constraint"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_rect_solid_background">

    <TextView android:id="@+id/group"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:textSize="9dp"
        android:textColor="@color/fomes_gray"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="나의 1위" />

    <TextView android:id="@+id/developer_name"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textSize="14dp"
        android:textColor="@color/fomes_white"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="블루홀" />

    <View android:id="@+id/divider"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/fomes_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer_name"
        app:layout_constraintBottom_toTopOf="@+id/developer_description"/>

    <TextView android:id="@+id/developer_description"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:textSize="11dp"
        android:textColor="@color/fomes_gray"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="배틀그라운드\n게임 개발사" />

</android.support.constraint.ConstraintLayout>