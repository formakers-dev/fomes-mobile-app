<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:src="@drawable/overview_fragment_background" />


    <LinearLayout
        android:id="@+id/character_type_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/character_type_simple_description"
            android:layout_width="wrap_content"
            android:layout_height="59.3dp"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            app:font="BMJUA"
            tools:ignore="MissingPrefix"
            tools:text="안녕하신가! 힘세고 강한 아침,\n만일 내게 물어보면 나는 …!!!" />

        <ImageView
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:layout_marginTop="45dp"
            android:src="@drawable/character_gamer" />

        <TextView
            android:id="@+id/character_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/bold_title"
            android:textSize="30dp"
            app:font="BMJUA"
            tools:ignore="MissingPrefix"
            tools:text="덕후가 아니라능 게이머벌" />

        <TextView
            android:id="@+id/character_type_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="14dp"
            android:textColor="@color/description"
            android:textSize="15dp"
            tools:text="어디서든 모바일 게임을 손에서 놓지 않는 당신!\n조금 내성적인 성향이 있지만, 게임 안에선\n누구보다 적극적이네요! 알면 알수록 매력적인\n당신은 양파같은 사람~ 자신있게 본모습을\n보여주면 핫해하태 여왕벌이 될지도 몰라요?!" />

        <View
            android:layout_width="321dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="33dp"
            android:background="@color/horizontal_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/character_type_layout"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="39dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="62.1dp"
                android:src="@drawable/full_honey_bowl" />

            <TextView
                android:id="@+id/app_count_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/bold_title"
                android:textSize="20dp"
                app:font="BMJUA"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/app_count_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:textColor="@color/bold_title"
                android:textSize="18dp"
                app:font="BMJUA"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/app_count_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="88dp"
                android:textColor="@color/description"
                android:textSize="15dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bee_house" />

            <TextView
                android:id="@+id/average_app_usage_time_textview"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                android:textColor="@color/bold_title"
                android:textSize="20dp"
                app:font="BMJUA"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/average_app_usage_time_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="88dp"
                android:textColor="@color/bold_title"
                android:textSize="18dp"
                app:font="BMJUA"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/average_app_usage_time_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="88dp"
                android:textColor="@color/description"
                android:textSize="15dp" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/longest_used_app_icon"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/longest_used_app_title"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/longest_used_app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/longest_used_app_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
