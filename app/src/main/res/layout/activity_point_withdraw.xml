<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/fomes_deep_dark_gray"
android:paddingStart="22dp"
android:paddingTop="23dp"
android:paddingEnd="22dp"
android:paddingBottom="23dp">

    <TextView
        android:id="@+id/my_available_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/fomes_white_alpha_87"
        android:textSize="18dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_point_title"
        android:text="가용 포인트"/>

    <TextView
        android:id="@+id/my_available_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/my_available_point_title"
        app:layout_constraintTop_toBottomOf="@+id/my_available_point_title"
        app:layout_constraintEnd_toEndOf="@+id/my_available_point_title"
        tools:text="30,000 P"/>


    <TextView
        android:id="@+id/my_point_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/fomes_white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_available_point"
        android:text="문화상품권 5천원권"/>

    <com.shawnlin.numberpicker.NumberPicker android:id="@+id/withdraw_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/my_point_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:np_min="1"
        app:np_max="1"
        app:np_width="180dp"
        app:np_height="64dp"
        app:np_dividerColor="@color/colorPrimary"
        app:np_selectedTextColor="@color/fomes_white"
        app:np_selectedTextSize="40dp"
        app:np_textColor="@color/fomes_white"
        app:np_textSize="35dp"
        app:np_orientation="horizontal"/>

    <TextView
        android:id="@+id/withdraw_count_postfix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fomes_white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/withdraw_count"
        app:layout_constraintTop_toTopOf="@+id/withdraw_count"
        app:layout_constraintBottom_toBottomOf="@+id/withdraw_count"
        android:text="장"/>


    <TextView
        android:id="@+id/withdraw_phone_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/fomes_white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/withdraw_count"
        android:text="지급 받을 핸드폰 번호"/>

    <EditText
        android:id="@+id/withdraw_phone_number"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="phone"
        android:textColor="@color/fomes_white"
        android:textColorHint="@color/fomes_warm_gray_2"
        android:hint="010-0000-0000"
        android:maxLength="13"
        app:layout_constraintTop_toBottomOf="@+id/withdraw_phone_number_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/colorPrimary"/>


    <Button
        android:id="@+id/withdraw_button"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/betatest_detail_section_content_text_size"
        android:textColor="@color/fomes_white"
        android:textStyle="bold"
        android:foreground="@drawable/ripple"
        android:background="@drawable/withdraw_point_button_selector"
        app:layout_goneMarginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/withdraw_phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="교환 신청하기"
        android:enabled="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>