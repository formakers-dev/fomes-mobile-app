<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingStart="17dp"
    android:paddingEnd="17dp"
    android:orientation="horizontal"
    android:background="@drawable/item_rect_rounded_corner_background"
    android:theme="@style/BetaTestDetailTheme.MissionItem">

    <TextView
        android:id="@+id/mission_item_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="12dp"
        android:textColor="@color/fomes_light_pale_gray"
        tools:text="1단계"/>

    <TextView
        android:id="@+id/mission_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/fomes_light_pale_gray"
        tools:text="게임 플레이ddddddddddddddddddddddddddddddddddddd"/>

    <TextView
        android:id="@+id/mission_item_progress_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        tools:text="참여 중"/>
</LinearLayout>