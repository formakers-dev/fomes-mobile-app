<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/beta_test_banner_background"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            android:src="@drawable/beta_test_banner_background"
            app:layout_constraintDimensionRatio="12:5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/beta_test_banner_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fomes_greyish_brown"
            android:padding="5dp"
            android:text="@string/beta_test_banner_label"
            android:textColor="@color/fomes_white"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/beta_test_banner_background"
            app:layout_constraintEnd_toEndOf="@+id/beta_test_banner_background"
            app:layout_constraintStart_toStartOf="@+id/beta_test_banner_background"
            app:layout_constraintTop_toTopOf="@+id/beta_test_banner_background"
            app:layout_constraintVertical_bias="0.28" />

        <TextView
            android:id="@+id/beta_test_banner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dp"
            android:text="@string/beta_test_banner_title"
            android:textAlignment="center"
            android:textColor="@color/fomes_white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/beta_test_banner_background"
            app:layout_constraintEnd_toEndOf="@+id/beta_test_banner_background"
            app:layout_constraintStart_toStartOf="@+id/beta_test_banner_background"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_banner_label"
            app:layout_constraintVertical_bias="0.25" />


        <TextView android:id="@+id/beta_test_banner_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/beta_test_banner_subtitle"
            android:textColor="@color/fomes_white"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_banner_title"
            app:layout_constraintStart_toStartOf="@+id/beta_test_banner_background"
            app:layout_constraintEnd_toEndOf="@+id/beta_test_banner_background"/>

        <TextView
            android:id="@+id/beta_test_open_contents_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="16dp"
            android:textColor="@color/fomes_greyish_brown"
            android:gravity="center_horizontal"
            android:text="@string/beta_test_open_contents_title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_banner_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        
        <View
            android:layout_width="@dimen/match_constraint"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_open_contents_title"
            app:layout_constraintStart_toStartOf="@+id/beta_test_open_contents_title"
            app:layout_constraintEnd_toEndOf="@+id/beta_test_open_contents_title"/>

        <ImageView
            android:id="@+id/beta_test_open_contents_welcome_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:src="@drawable/beta_test_open_welcome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_open_contents_title" />

        <TextView
            android:id="@+id/beta_test_open_contents_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:text="@string/beta_test_open_contents_subtitle"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beta_test_open_contents_welcome_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
