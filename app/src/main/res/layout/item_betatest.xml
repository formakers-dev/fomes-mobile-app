<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="7dp"
    android:paddingStart="7dp">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="21dp"
            android:background="@drawable/item_rect_rounded_corner_background"
            android:theme="@style/BetaTestTheme.CardBackground">

            <TextView
                android:id="@+id/betatest_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/betatest_test_type"
                tools:text="포메스 앱 유저 대상" />

            <TextView
                android:id="@+id/betatest_test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="@id/betatest_target"
                app:layout_constraintStart_toEndOf="@id/betatest_target"
                app:layout_constraintEnd_toStartOf="@+id/betatest_project_status"
                app:layout_constraintBottom_toBottomOf="@id/betatest_target"
                tools:text="설문" />

            <TextView
                android:id="@+id/betatest_project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="@id/betatest_target"
                app:layout_constraintStart_toEndOf="@id/betatest_test_type"
                app:layout_constraintBottom_toBottomOf="@id/betatest_target"
                tools:text="종료 1일 전" />

            <TextView
                android:id="@+id/betatest_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fomes_white"
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@id/betatest_target"
                tools:text="서랍에서 찾은 또 다른 설문지" />

            <View android:id="@+id/betatest_divider"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/fomes_gray_3"
                app:layout_constraintTop_toBottomOf="@id/betatest_title_textview"/>

            <TextView android:id="@+id/betatest_subtitle_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                android:textColor="@color/fomes_light_gray"
                android:textSize="12dp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@id/betatest_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/betatest_overview_imageview"
                tools:text="주변을 더듬거리다가 서랍을 찾아냈다. 드르륵 열어보니 설문이 놓여져 있다. 완료하면 보상이 있다는데 한번 해볼까…? " />

            <ImageView android:id="@+id/betatest_overview_imageview"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:src="@color/fomes_deep_gray"
                app:layout_constraintTop_toTopOf="@id/betatest_subtitle_textview"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/betatest_required_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:drawableStart="@drawable/icon_bronze_medal"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintTop_toBottomOf="@id/betatest_subtitle_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/betatest_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="약 3분" />

            <TextView
                android:id="@+id/betatest_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableStart="@drawable/icon_diamond"
                android:drawablePadding="4dp"
                android:text="9 문항"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/betatest_required_time"
                app:layout_constraintStart_toEndOf="@id/betatest_required_time"
                app:layout_constraintEnd_toStartOf="@+id/betatest_reward"
                app:layout_constraintBottom_toBottomOf="@id/betatest_required_time"
                tools:text="9 문항" />

            <TextView
                android:id="@+id/betatest_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:gravity="center"
                android:drawableStart="@drawable/icon_gold_medal"
                android:drawablePadding="4dp"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/betatest_required_time"
                app:layout_constraintStart_toEndOf="@id/betatest_size"
                app:layout_constraintEnd_toStartOf="@id/betatest_overview_imageview"
                app:layout_constraintBottom_toBottomOf="@id/betatest_required_time"
                tools:text="보상 없음" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>