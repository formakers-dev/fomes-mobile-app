<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="7dp"
    android:paddingStart="7dp">

    <android.support.v7.widget.CardView
        android:id="@+id/betatest_cardview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_rect_rounded_corner_background"
            android:theme="@style/BetaTestTheme.CardBackground">

            <ImageView android:id="@+id/betatest_overview_imageview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@color/fomes_warm_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView android:id="@+id/betatest_progress_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="11dp"
                android:text="테스트 참여 0% 완료"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/betatest_progress_bar"
                tools:text="테스트 참여 50% 완료"/>

            <ProgressBar android:id="@+id/betatest_progress_bar"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="@id/betatest_overview_imageview"
                app:layout_constraintStart_toStartOf="@id/betatest_progress_textview"
                app:layout_constraintEnd_toStartOf="@+id/betatest_project_status"
                tools:progress="50"/>

            <TextView
                android:id="@+id/betatest_project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintStart_toEndOf="@+id/betatest_progress_bar"
                app:layout_constraintEnd_toEndOf="@+id/betatest_progress_textview"
                app:layout_constraintTop_toTopOf="@+id/betatest_progress_bar"
                app:layout_constraintBottom_toBottomOf="@+id/betatest_progress_bar"
                tools:text="종료 1일 전" />

            <View android:id="@+id/betatest_divider"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:background="@color/fomes_gray_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/betatest_overview_imageview"/>

            <TextView
                android:id="@+id/betatest_title_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/fomes_white"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/betatest_overview_imageview"
                tools:text="서랍에서 찾은 또 다른 설문지" />


            <TextView android:id="@+id/betatest_subtitle_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/fomes_light_gray"
                android:textSize="12dp"
                android:lineSpacingExtra="4dp"
                app:layout_constraintStart_toStartOf="@+id/betatest_title_textview"
                app:layout_constraintEnd_toStartOf="@+id/betatest_bug_button"
                app:layout_constraintTop_toBottomOf="@+id/betatest_title_textview"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="주변을 더듬거리다가 서랍을 찾아냈다. 드르륵 열어보니 설문이 놓여져 있다. 완료하면 보상이 있다는데 한번 해볼까…? " />

            <Button android:id="@+id/betatest_bug_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="버그 제보 하기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

