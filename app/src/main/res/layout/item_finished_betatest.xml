<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="7dp"
    android:paddingStart="7dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/betatest_cardview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:background="@drawable/item_rect_rounded_corner_background"
            android:theme="@style/BetaTestTheme.CardBackground">

            <TextView android:id="@+id/betatest_finished_company_says_title"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="게임사 소감"
                android:textStyle="bold"
                android:textSize="10dp"
                android:textColor="@color/fomes_warm_gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView android:id="@+id/betatest_finished_company_says"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12dp"
                android:textColor="@color/fomes_white"
                android:text="@string/betatest_company_says_not_collected"
                app:layout_constraintTop_toBottomOf="@id/betatest_finished_company_says_title"
                app:layout_constraintStart_toStartOf="@id/betatest_finished_company_says_title"
                app:layout_constraintEnd_toEndOf="@id/betatest_finished_company_says_title"
                tools:text="'참여해주셔서 감사합니다. 현재 게임사의 한마디가 준비중입니다.' - from 포메스"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/betatest_finished_top_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="betatest_finished_company_says"/>

            <View android:id="@+id/betatest_divider"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/betatest_finished_top_layout"
                tools:ignore="MissingConstraints" />

            <ImageView android:id="@+id/betatest_icon_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:foreground="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.FinishedIconForeground"
                android:src="@drawable/not_found_app_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/betatest_divider"/>

            <TextView
                android:id="@+id/betatest_title_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textColor="@color/fomes_white"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="@+id/betatest_icon_imageview"
                app:layout_constraintStart_toEndOf="@+id/betatest_label"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="서랍에서 찾은 또 다른 설문지" />

            <ImageView android:id="@+id/betatest_label"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toTopOf="@id/betatest_title_textview"
                app:layout_constraintEnd_toStartOf="@id/betatest_title_textview"
                app:layout_constraintStart_toEndOf="@+id/betatest_icon_imageview"
                tools:src="@drawable/label_attend"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/betatest_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.OldTagBackground"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/betatest_title_textview"
                app:layout_constraintStart_toStartOf="@id/betatest_label"
                app:layout_constraintEnd_toStartOf="@+id/betatest_test_type"
                tools:text="포메스 앱 유저 대상" />

            <TextView
                android:id="@+id/betatest_test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.OldTagBackground"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/betatest_target"
                app:layout_constraintStart_toEndOf="@id/betatest_target"
                app:layout_constraintBottom_toBottomOf="@id/betatest_target"
                tools:text="설문" />

            <TextView
                android:id="@+id/betatest_subtitle_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textColor="@color/fomes_light_gray"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@+id/betatest_target"
                app:layout_constraintStart_toStartOf="@+id/betatest_label"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                tools:text="장르: 시뮬레이션" />

            <TextView
                android:id="@+id/betatest_period_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textColor="@color/fomes_light_gray"
                android:textSize="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/betatest_subtitle_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_label"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                tools:text="테스트 기간 : 2019 3월 11일~21일" />

            <View android:id="@+id/betatest_title_layout_disable_background"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/match_constraint"
                android:background="#90454647"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@+id/betatest_icon_imageview"
                app:layout_constraintBottom_toBottomOf="@+id/betatest_period_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_label"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                tools:visibility="visible"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.FinishedAwardBackground"
                app:layout_goneMarginTop="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                app:layout_constraintStart_toStartOf="@id/betatest_icon_imageview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                app:layout_constraintTop_toBottomOf="@id/betatest_period_textview"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/betatest_award_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="betatest_award_icon,betatest_award_title,betatest_award_contents,betatest_finished_epilogue_button"/>

                <ImageView android:id="@+id/betatest_award_icon"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="4dp"
                    android:background="@color/fomes_yellow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView android:id="@+id/betatest_award_title"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="테스터 시상식"
                    android:textStyle="bold"
                    android:textColor="@color/fomes_warm_gray_2"
                    android:textSize="10dp"
                    app:layout_constraintTop_toTopOf="@id/betatest_award_icon"
                    app:layout_constraintBottom_toBottomOf="@id/betatest_award_icon"
                    app:layout_constraintStart_toEndOf="@id/betatest_award_icon"
                    app:layout_constraintEnd_toStartOf="@id/betatest_finished_epilogue_button"/>

                <TextView android:id="@+id/betatest_award_contents"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/fomes_white"
                    android:textSize="13dp"
                    app:layout_constraintTop_toBottomOf="@id/betatest_award_title"
                    app:layout_constraintStart_toStartOf="@id/betatest_award_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="테스트 영웅 : 조로 님\n테스트요정: 이브 외 9명" />
                
                <Button
                    android:id="@+id/betatest_finished_epilogue_button"
                    android:layout_width="68dp"
                    android:layout_height="32dp"
                    android:background="@drawable/epilogue_button_selector_old"
                    android:enabled="false"
                    android:foreground="@drawable/ripple"
                    android:text="자세히 보기"
                    android:textColor="@color/beta_test_finished_group_epilogue_button"
                    android:textSize="11dp"
                    android:theme="@style/BetaTestTheme.EpilogueButtonBackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <LinearLayout android:id="@+id/betatest_finished_my_feedback"
                    android:layout_width="@dimen/match_constraint"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView android:id="@+id/betatest_finished_progress_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/icon_grey_flag"
                        android:drawableEnd="@drawable/icon_grey_flag_reverse"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/fomes_warm_gray"
                        android:text="@string/betatest_not_submitted_my_feedback" />
                    <TextView android:id="@+id/betatest_finished_progress_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:textColor="@color/fomes_warm_gray"
                        android:text="@string/betatest_collecting_results" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>