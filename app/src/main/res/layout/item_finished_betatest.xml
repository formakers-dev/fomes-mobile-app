<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="7dp"
    android:paddingStart="7dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/betatest_cardview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_rect_rounded_corner_background"
            android:theme="@style/BetaTestTheme.CardBackground">

            <TextView android:id="@+id/betatest_finished_company_says"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="12dp"
                android:textColor="@color/fomes_warm_gray"
                android:text="@string/betatest_company_says_not_collected"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/betatest_label"
                tools:text="'참여해주셔서 감사합니다. 현재 게임사의 한마디가 준비중입니다.' - from 포메스"/>

            <ImageView android:id="@+id/betatest_label"
                android:layout_width="66dp"
                android:layout_height="42dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/label_attend"
                tools:visibility="visible"/>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/betatest_finished_top_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="betatest_finished_company_says, betatest_label"/>

            <View android:id="@+id/betatest_divider"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/fomes_gray_3"
                app:layout_constraintTop_toBottomOf="@+id/betatest_finished_top_layout"
                tools:ignore="MissingConstraints" />

            <ImageView android:id="@+id/betatest_icon_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/not_found_app_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/betatest_divider"/>

            <TextView
                android:id="@+id/betatest_title_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/fomes_white"
                android:textSize="17dp"
                app:layout_constraintTop_toTopOf="@+id/betatest_icon_imageview"
                app:layout_constraintStart_toEndOf="@+id/betatest_icon_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="서랍에서 찾은 또 다른 설문지" />

            <TextView
                android:id="@+id/betatest_subtitle_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textColor="@color/fomes_white"
                android:textSize="11dp"
                app:layout_constraintTop_toBottomOf="@+id/betatest_title_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_title_textview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                tools:text="장르: 시뮬레이션" />

            <TextView
                android:id="@+id/betatest_period_textview"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:textColor="@color/fomes_white"
                android:textSize="11dp"
                app:layout_constraintTop_toBottomOf="@+id/betatest_subtitle_textview"
                app:layout_constraintStart_toStartOf="@+id/betatest_title_textview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                tools:text="테스트 기간 : 2019 3월 11일~21일" />

            <Button android:id="@+id/betatest_finished_epilogue_button"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:enabled="false"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/epilogue_button_selector"
                android:foreground="@drawable/ripple"
                android:theme="@style/BetaTestTheme.EpilogueButtonBackground"
                app:layout_constraintStart_toStartOf="@+id/betatest_icon_imageview"
                app:layout_constraintEnd_toEndOf="@+id/betatest_title_textview"
                app:layout_constraintTop_toBottomOf="@id/betatest_period_textview"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:visibility="invisible"/>

            <ImageView android:id="@+id/betatest_finished_epilogue_button_icon"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_lock"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintEnd_toStartOf="@+id/betatest_finished_epilogue_button_text"
                app:layout_constraintTop_toTopOf="@id/betatest_finished_epilogue_button_text"/>

            <TextView android:id="@+id/betatest_finished_epilogue_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/fomes_warm_gray"
                android:text="@string/betatest_epilogue_coming_soon"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintBottom_toBottomOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintStart_toEndOf="@id/betatest_finished_epilogue_button_icon"
                app:layout_constraintEnd_toEndOf="@id/betatest_finished_epilogue_button"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>