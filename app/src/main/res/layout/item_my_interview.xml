<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/interview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="툰스토리 유저 인터뷰"/>
        <TextView
            android:id="@+id/interview_d_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="D-1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/interview_date_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12월 11일 (월) 우면사업장 15:00"/>
        <Button
            android:id="@+id/interview_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소하기"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/interview_open_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="신청\n17.11.30"/>
        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="@color/appbee_gray"/>
        <TextView
            android:id="@+id/interview_close_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="확정\n17.11.30"/>
        <View
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:background="@color/appbee_gray"/>
        <TextView
            android:id="@+id/interview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="완료\n17.11.30"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 확정 후 취소 / 노쇼 / 지각은 패널티가 부과될 수 있습니다."/>
    <TextView
        android:id="@+id/interview_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="* 인터뷰 위치 : 우면사업장 C동 1층 107호 회의실\n"/>
    <TextView
        android:id="@+id/emergency_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="* 비상연락처 : 010-1234-5678"/>
    <Button
        android:id="@+id/show_interview_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="프로젝트 설명 다시 보기"/>

</LinearLayout>