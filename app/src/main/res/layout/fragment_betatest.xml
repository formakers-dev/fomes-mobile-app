<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/fomes_content_background">


    <TextView
        android:id="@+id/betatest_comming_soon_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="center"
        android:text="@string/betatest_coming_soon"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/fomes_white"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/betatest_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/betatest_title"
        android:textSize="24dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/betatest_subtitle_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/betatest_subtitle"
        android:textSize="15dp"
        android:textColor="@color/fomes_gray"/>

    <ImageView
        android:id="@+id/betatest_imageview"
        android:layout_width="177dp"
        android:layout_height="214dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/event_feedback_capture"/>

    <View
        android:layout_width="231dp"
        android:layout_height="1dp"
        android:background="@color/fomes_gray" />

    <TextView
        android:id="@+id/betatest_description_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/betatest_description"
        android:textSize="12dp"
        android:textColor="@color/fomes_light_warm_gray" />

</LinearLayout>