<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideOverlay"
    android:background="@color/fomes_content_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/betatest_comming_soon_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/betatest_coming_soon"
            android:textColor="@color/fomes_white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/betatest_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/betatest_title"
            android:textColor="@color/colorPrimary"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/betatest_subtitle_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/betatest_subtitle"
            android:textColor="@color/fomes_gray"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/betatest_imageview"
            android:layout_width="177dp"
            android:layout_height="214dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/event_feedback_capture" />

        <View
            android:layout_width="231dp"
            android:layout_height="1dp"
            android:background="@color/fomes_gray" />

        <TextView
            android:id="@+id/betatest_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:gravity="center"
            android:text="@string/betatest_description"
            android:textColor="@color/fomes_light_warm_gray"
            android:textSize="12dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>