<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fomes_white">

    <TextView
        android:id="@+id/event_dialog_title_textview"
        android:layout_width="142dp"
        android:layout_height="23dp"
        android:layout_marginTop="19dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:textColor="@color/fomes_white"
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/event_dialog_rounded_solid_rect_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/event_dialog_subtitle_textview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="32dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/fomes_gray"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/event_dialog_title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/event_dialog_description_textview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:textColor="@color/fomes_light_warm_gray"
        android:textSize="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/event_dialog_subtitle_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/event_dialog_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/event_dialog_description_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/event_dialog_ok_button"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="@string/common_confirm"
        android:textColor="@color/fomes_white"
        android:textSize="@dimen/provision_bottom_button_text_size"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/event_dialog_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>