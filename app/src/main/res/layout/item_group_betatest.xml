<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="7dp"
    android:paddingStart="7dp">

    <android.support.v7.widget.CardView
        android:id="@+id/betatest_cardview"
        android:layout_width="@dimen/match_constraint"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="21dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="21dp"
            android:background="@drawable/item_rect_rounded_corner_background"
            android:theme="@style/BetaTestTheme.CardBackground">

            <TextView
                android:id="@+id/betatest_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/betatest_test_type"
                tools:text="포메스 앱 유저 대상" />

            <TextView
                android:id="@+id/betatest_test_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="@id/betatest_target"
                app:layout_constraintStart_toEndOf="@id/betatest_target"
                app:layout_constraintEnd_toStartOf="@+id/betatest_project_status"
                app:layout_constraintBottom_toBottomOf="@id/betatest_target"
                tools:text="설문" />

            <TextView
                android:id="@+id/betatest_project_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:textSize="11dp"
                android:textColor="@color/fomes_white"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.TagBackground"
                app:layout_constraintTop_toTopOf="@id/betatest_target"
                app:layout_constraintStart_toEndOf="@id/betatest_test_type"
                app:layout_constraintBottom_toBottomOf="@id/betatest_target"
                tools:text="종료 1일 전" />

            <TextView
                android:id="@+id/betatest_title_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/fomes_white"
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@id/betatest_target"
                tools:text="서랍에서 찾은 또 다른 설문지" />

            <View android:id="@+id/betatest_divider"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/fomes_gray_3"
                app:layout_constraintTop_toBottomOf="@id/betatest_title_textview"/>

            <!-- 카드 위에 띄우고 싶다면 이 아래에 추가하자 -->
            <View android:id="@+id/betatest_disable_background"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="@dimen/match_constraint"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.DisableBackground"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible"/>

            <ImageView android:id="@+id/betatest_stamp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/stamp_attend"
                tools:visibility="visible"/>

            <LinearLayout android:id="@+id/betatest_finished_my_feedback"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/item_rect_rounded_corner_background"
                android:theme="@style/BetaTestTheme.FinishedGroupBlockBackground"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/betatest_divider"
                app:layout_constraintBottom_toTopOf="@+id/betatest_finished_epilogue_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView android:id="@+id/betatest_finished_progress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="4dp"
                    android:drawableStart="@drawable/icon_racing_flag"
                    android:drawableEnd="@drawable/icon_racing_flag_reverse"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/fomes_white"
                    android:text="@string/betatest_submitted_my_feedback" />
                <TextView android:id="@+id/betatest_finished_progress_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:textSize="13dp"
                    android:textColor="@color/fomes_warm_gray_2"
                    android:text="@string/betatest_collecting_results" />
            </LinearLayout>

            <Button android:id="@+id/betatest_finished_epilogue_button"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:enabled="false"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/epilogue_button_selector"
                android:theme="@style/BetaTestTheme.EpilogueButtonBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/betatest_finished_my_feedback"
                app:layout_constraintBottom_toTopOf="@+id/betatest_finished_company_says"
                tools:visibility="invisible"/>

            <ImageView android:id="@+id/betatest_finished_epilogue_button_icon"
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/icon_lock"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintEnd_toStartOf="@+id/betatest_finished_epilogue_button_text"
                app:layout_constraintTop_toTopOf="@id/betatest_finished_epilogue_button_text"/>

            <TextView android:id="@+id/betatest_finished_epilogue_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/fomes_warm_gray"
                android:text="@string/betatest_epilogue_coming_soon"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintBottom_toBottomOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintStart_toEndOf="@id/betatest_finished_epilogue_button_icon"
                app:layout_constraintEnd_toEndOf="@id/betatest_finished_epilogue_button"/>

            <TextView android:id="@+id/betatest_finished_company_says"
                android:layout_width="@dimen/match_constraint"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:textColor="@color/colorPrimary"
                android:text="게임사 소감 : ??? (모든 결과 취합 시 표시됩니다)"
                app:layout_constraintTop_toBottomOf="@id/betatest_finished_epilogue_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>