<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/representation_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:foreground="@drawable/image_underline_background"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="9dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/white_back_button"
                android:textSize="32dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="31dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/appbee_gray"
                android:textSize="24dp"
                app:font="BMJUA" />

            <TextView
                android:id="@+id/project_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textColor="@color/appbee_warm_gray"
                android:textSize="17dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appbee_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="53dp"
            android:layout_marginTop="45dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginStart="14dp"
                android:gravity="center"
                android:text="@string/introduce_my_project"
                android:textColor="@color/appbee_gray"
                android:textSize="14dp"
                app:font="medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="41dp"
                android:layout_marginEnd="98dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="3dp"
                android:background="@color/appbee_gray" />

            <FrameLayout
                android:id="@+id/project_video_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="54dp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/description_image_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginEnd="11dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/project_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="54dp"
                android:gravity="center"
                android:textColor="@color/appbee_warm_gray"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/appbee_yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/owner_photo"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/project_owner_default_image" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/project_owner"
                        android:textColor="@color/appbee_warm_gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/appbee_gray"
                        android:textSize="16dp"
                        app:font="medium" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/interviewer_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.5dp"
                android:textColor="@color/appbee_warm_gray"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
